$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
		@mkdir -p $(OBJ_DIR)
		@echo "$(GREY)Compiling.............................$(ORANGE)$(<F)"
		@$(CC) $(CFLAGS) $(HEAD)  -c $< -o $@
		@echo "$(GREEN)DONE!$(GREY)"
		@sleep .2

libraries:
	mkdir -p libraries
libft:
		@make -C $(LIBFT_DIR)
		
lexer:
		@make -C $(LEXER_DIR)

parser:
		@make -C $(PARSER_DIR)

